<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:background="@drawable/recycler_linear_shape">

    <ImageView
        android:id="@+id/item_info_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        />

    <TextView
        android:id="@+id/item_info_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/item_info_img"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="title"
        />

    <TextView
        android:id="@+id/item_info_author"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/item_info_img"
        android:layout_below="@+id/item_info_title"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:text="author"
        android:textColor="@color/grey600"
        android:textSize="14sp"/>

</RelativeLayout>